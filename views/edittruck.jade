extends layout

block content
	div(class="container HomeContainer")
		div(class="row")
			div(class="span12 text-center")
				h1 Edit Truck #{truck.truckname}
		div(class="row")
			div(class="span12")
				form(name="edittruck",action="/admin/edittruck",method="post")
					label Truck Label:
						input(type="text", name="truckname", value="#{truck.truckname}")
					br
					label Truck Serial:
						input(type="text", name="truckserial", value="#{truck.truckserial}")
					br
					label Truck Make:
						input(type="text", name="truckmake", value="#{truck.truckmake}")
					br
					label Truck Model:
						input(type="text", name="truckmodel", value="#{truck.truckmodel}")
					br
					label Truck Plate:
						input(type="text", name="truckplate", value="#{truck.truckplate}")
					br
					input(type="hidden", name="truckid", value="#{truck.truckid}")
					input(type="submit", value="Submit")
					br
					br
					div(class='button')
						a(href="/admin") Cancel
