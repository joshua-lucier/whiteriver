extends layout

block content
	div(class="HomeContainer")
		div(class="Inner")
			div(class="row")
				div(class="span12 text-center")
					h1 Edit Task #{task.title}
			div(class="row")
				div(class="span12")
					form(name="edittruck",action="/admin/edittask",method="post")
						div(class="row")
							input(type="hidden", name="creatorid", value="#{task.creatorid}")
							input(type="hidden", name="taskid", value="#{task.taskid}")
							div(class="span3 text-right")
								label Assigned to:
							div(class="span6")
								select(name="chargedid",id="chargedid")
									option(value="99999") None
									each id, index in ids
										option(value=id)= names[index]
						div(class="row")
							div(class="span3 text-right")
								label Title:
							div(class="span6")
								input(type="text", name="title", class="input", value="#{task.title}")
						div(class="row")
							div(class="span3 text-right")
								label Description:
							div(class="span6")
								textarea(id="description",name="description",rows="5",cols="20", class="input") #{task.description}
						div(class="row")
							div(class="span12")
								br
						div(class="row")
							div(class="span3 text-right")
								label Time and Date due:
							div(class="span6")
								input(type="datetime-local",name="timedue", class="input", id="timedue")
						div(class="row")
							div(class="span3 text-right")
								label Repeat period:
							div(class="span6")
								select(name="repeatperiod",id="repeatperiod")
									option(value="none") No Repeat
									option(id="hourly",value="hourly") Hourly
									option(id="daily",value="daily") Daily
									option(id="weekly",value="weekly") Weekly
									option(id="monthly",value="monthly") Monthly
									option(id="yearly",value="yearly") Yearly
						div(class="row")
							div(class="span3 text-right")
								label Repeat interval:
							div(class="span6")
								input(type="number",name="repeatincrement", class="input", value="#{task.repeatincrement}")
						div(class="row")
							div(class="span3 text-right")
								label Repeat end date:
							div(class="span6")
								input(id="repeatend",type='datetime-local',name="repeatend", class="input")
						div(class="row")
							div(class="span3 text-right")
								input(type="submit", value="Submit")
								br
								br
								div(class='button')
									a(href="/admin") Cancel
		script $("#repeatperiod").val("#{task.repeatperiod}");$("#chargedid").val("#{task.chargedid}");repeatend = "#{dates.repeatend}".replace(/&quot;/g,'').replace(/Z/g,'');$("#repeatend").val(repeatend); timedue = "#{dates.timedue}".replace(/&quot;/g,'').replace(/Z/g,'');$("#timedue").val(timedue);