extends layout

block content
	script(src="/javascripts/adminscripts.js")
	div(class="HomeContainer")
		div(class="Inner")
			div(class="row-fluid")
				div(class="span12")
					h1 #{username}'s Administrator Console
					h4.message #{message}
			div(class="row adminconsole")
				div(class="span3")
					h2 Today's Tasks
					div(id="todaystasks",class="span3",class="list")
				div(class="span3")
					h2 Current Alerts
					div(id="todaysalerts",class="span3",class="list")
				div(class="span3")
					h2 
						a(href="/admin/callentrytable") Call Entry Log
			div(class="row-fluid adminconsole")
				div(class="span3")
					div
						h2 Trucks
						div.button
							a(href="/admin/addtruck") Add Truck
					div(id="trucklist",class="list")
				div(class="span3")
					div
						h2 Tasks
						div.button
							a(href="/admin/addtaskform") Add Task
					div(id="tasklist",class="list")
				div(class="span3")
					div
						h2 Alerts
						div.button
							a(href="/admin/addalertform") Add Alert
					div(id="alertlist",class="list")
				div(class="span3")
					div
						h2 Admins
						div.button
							a(onClick="ToggleAdminList(function(){});") Admins
					div(id="adminlist",class="list",style="color: black;") +